{% set layout = "ClarolineCoreBundle:Workspace:layout.html.twig" %}

{% if isDesktop() %}
    {% set layout = "ClarolineCoreBundle:Desktop:layout.html.twig" %}
{% endif %}
{% extends layout %}

{% block stylesheets %}
    {{ parent() }}



    {% stylesheets debug=false filter='lessphp, cssmin' output='vendor/innovaaudiorecorder/css/innova_audio_recorder.min.css'
        '@InnovaAudioRecorderBundle/Resources/public/less/app.less'
    %}
    <link href="{{ asset_url }}" rel="stylesheet" media="screen" />
    {% endstylesheets %}
{% endblock %}




{% block content %}
    <div class="panel panel-default">

            {% block audio_recorder_content %}
            {% endblock %}

    </div>
{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script type="text/javascript" src="{{ url('bazinga_jstranslation_js', { 'domain':'audio_recorder' }) }}"></script>



    {% javascripts
        '@InnovaAudioRecorderBundle/Resources/public/js/audio_recorder.js'
    %}

    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

{% endblock %}
